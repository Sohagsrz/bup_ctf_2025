<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="#050810"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/contentContainer"
        android:padding="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/logoFrame"
            android:background="#10151f"
            android:padding="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/skeleton"
                android:scaleType="centerInside"
                android:contentDescription="App logo"
                android:alpha="0.92"
                android:translationX="2dp"
                android:translationY="-2dp"
                android:rotation="-6"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#00ff66"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultimate Hacker App"
            android:textAllCaps="true"
            android:fontFamily="monospace"
            android:letterSpacing="0.08"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#88ffffff"
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="by NomanProdhan"
            android:fontFamily="monospace"/>
        <View
            android:background="#22ffffff"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#cccccc"
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enter target name to initiate trace."
            android:fontFamily="monospace"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/inputRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <EditText
                android:textColor="#ffffff"
                android:textColorHint="#66ffffff"
                android:id="@+id/etTargetName"
                android:background="#111726"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Target name"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:fontFamily="monospace"/>
            <Button
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/btnHack"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HACK"
                android:textAllCaps="true"
                android:fontFamily="monospace"
                android:layout_marginStart="12dp"
                android:backgroundTint="#00ff66"/>
        </LinearLayout>
        <TextView
            android:textSize="13sp"
            android:textColor="#00ff66"
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="&gt;&gt; STATUS: Idle. Awaiting target..."
            android:fontFamily="monospace"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/tvLogLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Activity Log"
            android:fontFamily="monospace"/>
        <ScrollView
            android:id="@+id/logScrollView"
            android:background="#070a12"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">
            <TextView
                android:textSize="13sp"
                android:textColor="#00ff66"
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&gt;&gt; Boot sequence initialized...\10&gt;&gt; Core modules online.\10&gt;&gt; Resolver standing by for target input...\10"
                android:lineSpacingExtra="4dp"
                android:fontFamily="monospace"/>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
